<div class="modal fade" id="<%= "edit-book-modal-"+book.id.to_s %>" tabindex="-1" role="dialog" aria-labelledby="editBookModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header d-block">
        <div class="d-flex">
          <h5 class="modal-title" id="editBookModalLabel"> <%= book.title.upcase %> </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
      </div>
      <div class="modal-body">
        <%= form_for [book] do |f| %>
        <div class="form-group row">
          <%= f.label :title, 'Title', class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: 'form-control', placeholder: 'Book Title' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :author, 'Author', class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= f.text_field :author, class: 'form-control', placeholder: 'Author Name' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :pages, 'Pages', class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= f.number_field :pages, class: 'form-control', placeholder: '0' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :genre, 'Genre', class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= f.collection_select(:genre_id, Genre.all, :id, :name, {:prompt => "Choose One"}, {:class=>'form-control'}) %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :picture, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= f.file_field :picture, class: 'form-control custom-file-input', id:"customFile" %>
            <label class="custom-file-label form-control" for="customFile">Choose file</label>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Save", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
