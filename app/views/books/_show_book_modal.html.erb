<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header d-block">
      <div class="d-flex">
        <h5 class="modal-title" id="showBookModalLabel"> <%= @book.title %> </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <h6 class="modal-title text-muted">By: <%= @book.author %> </h6>
    </div>
    <div class="modal-body">
      <div class="card flex-md-row mb-4 h-md-250 border-0">
        <%= image_tag @book.picture_url, class:'card-img-right flex-auto d-none d-lg-block', style:'width: 150px; height: 200px;'%>
        <div class="card-body d-flex flex-column align-items-start">
          <p>
            <strong>Genre:</strong> <%= @book.genre.name %>
          </p>
          <p>
            <strong>Length:</strong> <%= @book.pages %> pages
          </p>
          <p>
            <strong>Average Rating:</strong> 5 stars
          </p>
        </div>
      </div>
      <div class="p-3 bg-white rounded">
        <h5 class="border-bottom border-gray pb-2 mb-0"> Reviews </h5>
        <div class="media text-muted pt-1">
          <span alt="32x32" class="d-flex justify-content-center mr-2 rounded review-user-display" style="width: 32px; height: 32px;" data-holder-rendered="true">
            X
          </span>
          <p class="media-body pb-1 mb-0 small lh-125 border-bottom border-gray">
            <strong class="d-block text-gray-dark">@username</strong> 3 stars
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
