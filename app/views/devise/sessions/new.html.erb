
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'form-signin'}) do |f| %>

  <div class="text-center mb-4">
    <img class="mb-4" src="../../assets/book-clubs-logo.svg" alt="" width="72" height="72">
  </div>

  <div class="form-label-group">
    <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: "Email address" %>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password, class: 'form-control', autocomplete: "current-password", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>
  </div>

  <p class="mt-3 mb-3 text-muted text-center"><%= render "devise/shared/links" %></p>

<% end %>
