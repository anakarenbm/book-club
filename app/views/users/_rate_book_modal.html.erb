<div class="modal fade bd-example-modal-sm" id="<%= "rate-book-modal-#{list_item.book.id.to_s}" %>" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog ">
    <div class="modal-content">
      <div class="modal-header border-0">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>My rating:
          <%= form_for [list_item,@new_review] do |f| %>
            <%= f.number_field :stars, class: 'form-control'%>
            <%= f.submit "Submit Review", class: 'float-right btn btn-light mt-1' %><br/>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
